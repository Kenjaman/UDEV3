
public class Main {

	public static void main(String[] args) {
		// Le code suivant évolue "les yeux fermés"
		Forme f = new Cercle(12,10,0,7); // f ne pourra pas utiliser les methodes spécifiques de Cercle
		System.out.println(f);
		System.out.println(f.getSurface());
		
		// le code suivant évolue est dédié au Cercle
		Cercle c = new Cercle(30,8,0,6);
		System.out.println(c);
		System.out.println(c.getSurface());
		
		
		Forme[] formesDuDessin = {f, new Rectangle(4, 2, 0, 4, 5),c};
		for( Forme forme : formesDuDessin ) {
			System.out.print(forme);
			System.out.print(":");
			System.out.println(forme.getSurface());	
		}
		
		Rectangle rectangle = new Rectangle(1,1,0,4,6);
		
		for(int y = 0; y<rectangle.getLongueur();y++) {
			for(int x=0; x<rectangle.getLargeur();x++) {
				if(x>=rectangle.getX() && x<=rectangle.getX()+rectangle.getLargeur()) {
					if(y>=rectangle.getY() && y<=rectangle.getY()+rectangle.getLongueur())
						System.out.print("*");
				}else
					System.out.print("\t");
			}
			System.out.print("\n");
		}
	}
	

}
